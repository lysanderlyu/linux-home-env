#!/bin/bash
if [[ "$(uname)" == "Linux" ]]; then
    export PATH=$QT5_12_9_BASE/5.12.9/gcc_64/bin:$PATH
    export QT5_12_9_BASE=$HOME/Qt5.12.9
    export LD_LIBRARY_PATH=$QT5_12_9_BASE/5.12.9/gcc_64/lib:$LD_LIBRARY_PATH
    export QMAKESPEC=$QT5_12_9_BASE/5.12.9/gcc_64/mkspecs/linux-g++
elif [[ "$(uname)" == "Darwin" ]]; then
    # brew qt5 on macos
    export PATH="$HOME/Apps/Homebrew/opt/qt@5/bin:$PATH"
    export LDFLAGS="-L$HOME/Apps/Homebrew/opt/qt@5/lib"
    export CPPFLAGS="-I$HOME/Apps/Homebrew/opt/qt@5/include"
    export PKG_CONFIG_PATH="$HOME/Apps/Homebrew/opt/qt@5/lib/pkgconfig"
    export CMAKE_PREFIX_PATH="$HOME/Apps/Homebrew/opt/qt@5"
fi
