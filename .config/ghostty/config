# Font setting
font-size = 15
# font-family = "Menlo"
# font-family = "SF Mono"
font-family = "Monaco"
font-thicken
font-thicken-strength = 128

# Theme setting
# theme = "Nvim Light"
# theme = "GitHub Dark Dimmed"
# theme = "Guezwhoz"
# theme = "Monokai Pro Spectrum"
# theme = "GitHub Light Default"
theme = "Tomorrow Night"

# Window setting
window-width = 1200
window-height = 600
window-save-state = always
window-title-font-family = "Monaco"
window-inherit-working-directory = true

# macos-icon = microchip
macos-icon = blueprint

# Keyboard binding
keybind = super+9=goto_tab:9
keybind = super+0=goto_tab:10
keybind = super+-=goto_tab:11

keybind = super++=increase_font_size:1.5
keybind = super+alt++=decrease_font_size:1.5

keybind = ctrl+shift+arrow_left=previous_tab
keybind = ctrl+shift+arrow_right=next_tab

# Mouse setting
right-click-action = copy-or-paste
